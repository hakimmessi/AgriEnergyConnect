@model IEnumerable<AgriEnergyConnect.Data.Models.Product>

<h1>My Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Production Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.ProductionDate.ToShortDateString()</td>
                <td>
                    <a href="/Products/Checkout" class="btn btn-primary">Checkout</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Home/FarmerHome" class="btn btn-secondary">Go back to Home</a>
